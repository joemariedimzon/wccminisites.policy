<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>
    
    <metal:styleslot fill-slot='style_slot'>
        <style type="text/css" media="all">

            .member-image-listing{
                display: inline-block;
                width: 200px;
                height: 200px;
                margin: 10px;
                position: relative;
                overflow: hidden
            }
            .member-image-listing > img{
                width: 100%;
            }
            .member-image-listing > p{
                position: absolute;
                bottom: 0;
                background-color:rgba(255,255,255,0.7);
                display: block;
                width: 100%;
                margin-bottom: 0;
                padding: 0 10px;
            }
           
        </style>  
    </metal:styleslot>

    <metal:content-core fill-slot="content-core">

            <div tal:content="structure context/getText"/>
                <tal:block tal:define="pas_member context/@@pas_member;
                                       brains view/network_group;
                                       toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                                       navigation_root_url context/@@plone_portal_state/navigation_root_url;" tal:condition="brains">
                      <tal:entry tal:repeat="item brains">
                            <div class="member-image-listing">
                                <img class="portraitPhoto" tal:attributes="src python: item['img']"/>
                                <p>
                                    <a tal:attributes="href python: navigation_root_url+'/author_view?id='+item['username']">
                                        <span tal:content="python: item['fullname']"/>
                                    </a>
                                </p>
                            </div>
                      </tal:entry>
                      <div class="member-image-listing">
                                <img class="portraitPhoto" src="http://gpsc.duke.edu/wp-content/uploads/Portrait_Yang_Yang.jpg">
                                <p>
                                    <a href="http://localhost:8080/wccminsite/author_view?id=ankwcc">
                                        <span>Annegret Kapp</span>
                                    </a>
                                </p>
                            </div>
    
                </tal:block>

    </metal:content-core>

</body>
</html>